<h2>All Movies</h2>

<%= form_tag movies_path, method: :get, id: 'ratings_form', local: true do %>
  <div class="mb-3">
    <% @all_ratings.each do |rating| %>
      <div class="form-check form-check-inline">
        <%= check_box_tag "ratings[#{rating}]", "1",
              @ratings_to_show.include?(rating),
              class: 'form-check-input', id: "ratings_#{rating}" %>
        <%= label_tag "ratings[#{rating}]", rating, class: 'form-check-label' %>
      </div>
    <% end %>
  </div>

  <div>
    <label class="form-label me-2" for="sort_by">Sort by:</label>
    <%= select_tag :sort_by,
                   options_for_select([["Title", "title"],
                                       ["Release date", "release_date"]],
                                       @sort_by),
                   id:    "sort_by",
                   class: "form-select d-inline w-auto" %>
  </div>

  <%= submit_tag 'Refresh', id: 'ratings_submit', class: 'btn btn-primary' %>
<% end %>

<%# ---------- CLICKABLE HEADERS WITH HIGHLIGHT ---------- %>
<% ratings_hash = (@ratings_to_show || @all_ratings).each_with_object({}) { |r, h| h[r] = '1' } %>
<% title_active = @sort_by == 'title' %>
<% date_active  = @sort_by == 'release_date' %>

<p class="mt-3">
  Sort by:
  <%= link_to 'Title',
              movies_path(sort_by: 'title', ratings: ratings_hash),
              id: 'title_header',
              class: (title_active ? 'active-sort' : nil),
              'aria-current': (title_active ? 'true' : 'false') %>
  |
  <%= link_to 'Release date',
              movies_path(sort_by: 'release_date', ratings: ratings_hash),
              id: 'release_date_header',
              class: (date_active ? 'active-sort' : nil),
              'aria-current': (date_active ? 'true' : 'false') %>
</p>


<div id="movies" class="mt-3">
  <% @movies.each do |movie| %>
    <div id="<%= dom_id movie %>">
      <p><strong>Title:</strong> <%= movie.title %></p>
      <p><strong>Rating:</strong> <%= movie.rating %></p>
      <p><strong>Description:</strong> <%= movie.description %></p>
      <p><strong>Release date:</strong> <%= movie.release_date %></p>
    </div>
    <p><%= link_to "Show this movie", movie %></p>
  <% end %>
</div>

<%= link_to 'Add new movie', new_movie_path, class: 'btn btn-primary' %>
